# Data source
SOURCE_URL=https://d37ci6vzurychx.cloudfront.net/trip-data/yellow_tripdata_2024-01.parquet
USE_SAMPLE_DATA=true     # true=use data/sample CSV; false=download SOURCE_URL

# Warehouse selection
WAREHOUSE=postgres       # options: postgres|snowflake

# Postgres local (docker-compose)
PG_HOST=localhost
PG_PORT=5432
PG_DB=analytics
PG_USER=etl
PG_PASSWORD=etl

# Snowflake (optional; keep blank in example)
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_ROLE=
SNOWFLAKE_DB=ANALYTICS
SNOWFLAKE_SCHEMA=TAXI
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Logging and behavior
LOG_LEVEL=INFO
CHUNK_SIZE=100000
FAIL_ON_DQ_ERRORS=true

# Airflow notifications (config only; no secrets)
ALERT_EMAIL=my-alerts@example.com
